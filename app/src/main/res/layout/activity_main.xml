<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:unity="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Unity Frame -->
    <FrameLayout
        android:id="@+id/unityFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/seekBarLayout" />

    <!-- SeekBars Layout -->
    <LinearLayout
        android:id="@+id/seekBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#AA000000"
        android:orientation="vertical"
        android:padding="16dp">


        <EditText
            android:id="@+id/edtText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done" />


        <!-- X Rotation SeekBar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X Rotation"
            android:textColor="#FFFFFF" />

        <SeekBar
            android:id="@+id/xSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="360" />

        <!-- Y Rotation SeekBar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Y Rotation"
            android:textColor="#FFFFFF" />

        <SeekBar
            android:id="@+id/ySeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="360" />

        <!-- Z Rotation SeekBar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Z Rotation"
            android:textColor="#FFFFFF" />

        <SeekBar
            android:id="@+id/zSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="360" />

    </LinearLayout>

</RelativeLayout>
